<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Toolkit="clr-namespace:Microsoft.Phone.Maps.Toolkit;assembly=Microsoft.Phone.Controls.Toolkit">
	<!-- Resource dictionary entries should be defined here. -->
	<Style x:Key="PushpinFM" TargetType="Toolkit:Pushpin">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Toolkit:Pushpin">
					<Grid HorizontalAlignment="Left" Height="55" VerticalAlignment="Top" Width="40">
						<Grid.Background>
							<ImageBrush ImageSource="/imagenes/pushping.png" Stretch="Uniform"/>
						</Grid.Background>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter Property="PositionOrigin" Value="0,1"/>
		<Setter Property="Background" Value="Black"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontSize" Value="18"/>
	</Style>
</ResourceDictionary>